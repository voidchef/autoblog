# Application Environment
NODE_ENV=development

# Port number
PORT=3000

# URL of the Mongo DB
# For local development (non-Docker):
MONGODB_URL=mongodb://127.0.0.1:27017/autoblog
# For Docker development:
# MONGODB_URL=mongodb://mongo:27017/autoblog
# For Docker production (with auth):
# MONGODB_URL=mongodb://admin:changeme@mongo:27017/autoblog?authSource=admin

# MongoDB Credentials (for Docker production)
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme

# JWT
# JWT secret key
JWT_SECRET=thisisasamplesecret
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=30
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30
# Number of days after which a remember me refresh token expires
JWT_REMEMBER_ME_EXPIRATION_DAYS=90
# Number of minutes after which a reset password token expires
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
# Number of minutes after which a verify email token expires
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# SMTP configuration options for the email service
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=email-server
SMTP_PORT=587
SMTP_USERNAME=email-server-username
SMTP_PASSWORD=email-server-password
EMAIL_FROM=support@yourapp.com

# Cookie configs
COOKIE_SECRET=thisisasamplesecret

# URL of client application (frontend)
CLIENT_URL=http://localhost:5173

# URL of server/API (backend - for OAuth callbacks)
SERVER_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_CLIENT_ID=com.yourapp.service
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY_PATH=./AuthKey_YOUR_KEY_ID.p8

# AWS
AWS_REGION='example-region'
AWS_ACCESS_KEY_ID='example-access-key'
AWS_SECRET_ACCESS_KEY='example-secret-key'
AWS_BUCKET_NAME='example-bucket-name'

# Google Ads
GA_PROPERTY_ID='example-property-id'
GA_KEY_FILENAME='example-key-filename.json'

# Google Cloud Text-to-Speech
GOOGLE_APPLICATION_CREDENTIALS='./service-account.json'